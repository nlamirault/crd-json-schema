{
  extends: [
    'config:recommended',
    ':dependencyDashboard',
    ':gitSignOff',
  ],
  enabled: true,
  timezone: 'Europe/Paris',
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard',
  suppressNotifications: [
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  assignees: [
    '@nlamirault',
  ],
  reviewersFromCodeOwners: true,
  labels: [
    'kind/renovate',
    'lifecycle/active',
    'status/review_needed',
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        'crds/.*\\.sh$',
      ],
      matchStrings: [
        '#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s*\\n(?:export\\s+)?VERSION=(?<currentValue>\\S+)',
      ],
    },
  ],
  packageRules: [
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'major',
      ],
      labels: [
        'kind/renovate',
        'lifecycle/active',
        'status/review_needed',
        'dependency/docker',
        'priority/high',
        'size/xs',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      labels: [
        'kind/renovate',
        'lifecycle/active',
        'status/review_needed',
        'dependency/docker',
        'priority/medium',
        'size/xs',
      ],
    },
    {
      matchDatasources: [
        'docker',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      labels: [
        'kind/renovate',
        'lifecycle/active',
        'status/review_needed',
        'dependency/docker',
        'priority/low',
        'size/xs',
      ],
    },
    {
      matchDatasources: [
        'action',
      ],
      matchUpdateTypes: [
        'major',
      ],
      labels: [
        'kind/renovate',
        'lifecycle/active',
        'status/review_needed',
        'area/github',
        'dependency/github',
        'priority/high',
        'size/xs',
      ],
    },
    {
      matchDatasources: [
        'action',
      ],
      matchUpdateTypes: [
        'minor',
      ],
      labels: [
        'kind/renovate',
        'lifecycle/active',
        'status/review_needed',
        'area/github',
        'dependency/github',
        'priority/medium',
        'size/xs',
      ],
    },
    {
      matchDatasources: [
        'action',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      labels: [
        'kind/renovate',
        'lifecycle/active',
        'status/review_needed',
        'area/github',
        'dependency/github',
        'priority/low',
        'size/xs',
      ],
    },
  ],
}
